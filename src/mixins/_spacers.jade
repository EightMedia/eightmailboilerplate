//- basic spacer row
mixin spacer-row
    tr
        td(
            class=(attributes.class) ? attributes.class : 'spacer-row',
            colspan=(attributes.colspan) ? attributes.colspan : '3'
        ) 
            &nbsp;

    block


//- small spacer row
mixin spacer-row-small
    +spacer-row(class='spacer-row-small', attributes)


//- spacer column
mixin spacer-col
    td.spacer(width='20', class=(attributes.class) ? attributes.class : '') 
        img(src="img/spacer.gif", width="20")